<p id="notice"><%= notice %></p>

<h1>Pet Histories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Weight</th>
      <th>Height</th>
      <th>Description</th>
      <th>Pet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_histories.each do |pet_history| %>
      <tr>
        <td><%= pet_history.weight %></td>
        <td><%= pet_history.height %></td>
        <td><%= pet_history.description %></td>
        <td><%= pet_history.pet_name %></td>
        <td><%= link_to 'Show', pet_history %></td>
        <td><%= link_to 'Edit', edit_pet_history_path(pet_history) %></td>
        <td><%= link_to 'Destroy', pet_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "<button class='btn btn-light'>New Pet History</button>".html_safe, new_pet_history_path, :id=>"open-contacts-dialog-btn", :class=>"inbox-sf-add-btn tip" %>
<%= link_to "<button class='btn btn-light'>Clients</button>".html_safe, clients_path, :id=>"open-contacts-dialog-btn", :class=>"inbox-sf-add-btn tip" %>
<%= link_to "<button class='btn btn-light'>Pets</button>".html_safe, pets_path, :id=>"open-contacts-dialog-btn", :class=>"inbox-sf-add-btn tip" %>
